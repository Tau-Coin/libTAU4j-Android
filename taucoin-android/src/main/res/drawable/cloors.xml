<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- 设置边框的宽度和颜色 -->
    <stroke android:width="@dimen/widget_size_3" android:color="#e1ffff"/>
    <!-- 设置框内的填充色  -->
    <solid android:color="#1f00BCD4"/>
    <!-- 设置圆角 -->
    <corners android:radius="@dimen/widget_size_5"/>
    <!-- 设置内边距 -->
    <padding
        android:left="@dimen/widget_size_2"
        android:top="@dimen/widget_size_2"
        android:right="@dimen/widget_size_2"
        android:bottom="@dimen/widget_size_2" />
</shape>