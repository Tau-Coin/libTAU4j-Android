<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_yellow" />
            <corners android:radius="@dimen/widget_size_2" />
            <stroke android:width="@dimen/widget_size_1" android:color="@color/color_yellow" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_yellow_light" />
            <corners android:radius="@dimen/widget_size_2" />
            <stroke android:width="@dimen/widget_size_1" android:color="@color/color_yellow_light" />
        </shape>
    </item>
</selector>