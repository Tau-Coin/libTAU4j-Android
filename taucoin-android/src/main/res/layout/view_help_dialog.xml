<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:visibility="visible"
            android:id="@+id/iv_close"
            android:layout_width="@dimen/widget_size_18"
            android:layout_height="@dimen/widget_size_18"
            android:layout_marginEnd="@dimen/widget_size_20"
            android:contentDescription="@null"
            android:layout_gravity="end"
            android:src="@mipmap/icon_close" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/widget_size_10"
            android:text="@string/community_auto_renewal_help_title"
            android:textColor="@color/color_blue"
            android:textAppearance="@style/TextAppearanceHeadline6"/>

        <io.taucoin.torrent.publishing.ui.customviews.MultilineTextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/widget_size_20"
            android:layout_marginBottom="@dimen/widget_size_10"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:lineSpacingExtra="@dimen/widget_size_5"
            android:textAppearance="@style/TextAppearanceBody2"
            android:text="@string/community_auto_renewal_help_content" />

    </LinearLayout>
</layout>