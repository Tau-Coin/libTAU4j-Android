<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/widget_size_30"
        android:paddingBottom="@dimen/widget_size_40"
        android:gravity="center_horizontal"
        android:background="@drawable/grey_rect_top_round_border">

        <TextView
            android:visibility="gone"
            android:layout_width="@dimen/widget_size_60"
            android:layout_height="@dimen/widget_size_5"
            android:layout_marginTop="@dimen/widget_size_15"
            android:layout_marginBottom="@dimen/widget_size_20"
            android:background="@drawable/grey_rect_round_bg"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/item_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/widget_size_50"
            android:layout_marginEnd="@dimen/widget_size_50"
            android:layout_marginTop="@dimen/widget_size_30"
            android:paddingTop="@dimen/widget_size_10"
            android:paddingBottom="@dimen/widget_size_10"
            android:gravity="center_vertical|center"
            android:textColor="@color/color_black"
            android:text="@string/cancel"
            android:background="@drawable/grey_rect_round_border"
            android:textAppearance="@style/TextAppearanceBody1"/>
    </LinearLayout>
</layout>