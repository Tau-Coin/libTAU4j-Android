<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/widget_size_100"
        android:background="@color/color_white">

        <ImageView
            android:layout_above="@+id/app_title"
            android:id="@+id/iv_logo"
            android:layout_width="@dimen/widget_size_160"
            android:layout_height="@dimen/widget_size_220"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:src="@mipmap/ic_launcher_splash" />

        <TextView
            android:visibility="visible"
            android:id="@+id/app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/splash_size_alpha"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:textColor="@color/color_logo"
            android:textAppearance="@style/TextAppearanceBody1"
            android:text="@string/app_name_alpha" />

        <TextView
            android:layout_below="@+id/app_title"
            android:id="@+id/app_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/widget_size_45"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:lineSpacingExtra="@dimen/widget_size_5"
            android:textSize="@dimen/widget_size_20"
            android:textStyle="bold"
            android:gravity="center_horizontal|bottom"
            android:textColor="@color/color_logo"
            android:textAppearance="@style/TextAppearanceBody1"
            android:text="@string/app_name_alpha_desc" />
    </RelativeLayout>

</layout>