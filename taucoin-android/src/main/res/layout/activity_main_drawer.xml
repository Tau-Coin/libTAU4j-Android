<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".ui.main.MainActivity">

        <androidx.drawerlayout.widget.DrawerLayout
            android:id="@+id/drawer_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <RelativeLayout
                    android:id="@+id/rl_main_left"
                    android:layout_width="0dp"
                    android:layout_weight="3.5"
                    android:layout_height="match_parent">

                    <include
                        android:id="@+id/toolbar_include"
                        layout="@layout/toolbar" />

                    <androidx.fragment.app.FragmentContainerView
                        android:id="@+id/main_left_fragment"
                        android:layout_below="@+id/toolbar_include"
                        android:name="io.taucoin.torrent.publishing.ui.main.MainFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <View
                        android:layout_below="@+id/toolbar_include"
                        android:layout_width="@dimen/widget_size_1"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:background="@color/divider"/>

                </RelativeLayout>

                <androidx.fragment.app.FragmentContainerView
                    android:name="io.taucoin.torrent.publishing.ui.main.EmptyFragment"
                    android:id="@+id/main_right_fragment"
                    android:layout_width="0dp"
                    android:layout_weight="6.5"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <com.google.android.material.navigation.NavigationView
                android:id="@+id/navigation_view"
                android:layout_width="@dimen/widget_size_270"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:background="?attr/backgroundDialog"
                android:focusable="true">

            <include
                android:id="@+id/drawer"
                layout="@layout/main_drawer_content" />
            </com.google.android.material.navigation.NavigationView>
        </androidx.drawerlayout.widget.DrawerLayout>
    </FrameLayout>
</layout>