<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="listener"
            type="android.view.View.OnClickListener" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <include
            android:id="@+id/toolbar_include"
            layout="@layout/toolbar_main_right" />

        <RelativeLayout
            android:id="@+id/rl_filter"
            android:layout_below="@+id/toolbar_include"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/widget_size_2"
            android:paddingEnd="@dimen/widget_size_0"
            android:paddingTop="@dimen/widget_size_5"
            android:paddingBottom="@dimen/widget_size_5">

            <LinearLayout
                android:id="@+id/ll_filter"
                android:layout_toStartOf="@+id/iv_filter"
                android:orientation="horizontal"
                android:minHeight="@dimen/widget_size_40"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_chain_note"
                    android:layout_width="0dp"
                    android:layout_weight="1.2"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/widget_size_1"
                    android:layout_marginEnd="@dimen/widget_size_1"
                    android:paddingTop="@dimen/widget_size_5"
                    android:paddingBottom="@dimen/widget_size_5"
                    android:paddingStart="@dimen/widget_size_2"
                    android:paddingEnd="@dimen/widget_size_2"
                    android:textColor="@color/color_white"
                    android:text="@string/community_chain_note"
                    android:tag="0"
                    android:includeFontPadding="false"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMaxTextSize="@dimen/font_size_12"
                    app:autoSizeMinTextSize="@dimen/font_size_2"
                    app:autoSizeStepGranularity="@dimen/font_size_0_5"
                    android:background="@drawable/community_tab_background_default"
                    android:gravity="center|center_vertical"
                    android:onClick="@{listener::onClick}"
                    android:textAppearance="@style/TextAppearanceBody3"/>

                <TextView
                    android:id="@+id/tv_off_chain"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/widget_size_1"
                    android:layout_marginEnd="@dimen/widget_size_1"
                    android:paddingTop="@dimen/widget_size_5"
                    android:paddingBottom="@dimen/widget_size_5"
                    android:paddingStart="@dimen/widget_size_2"
                    android:paddingEnd="@dimen/widget_size_2"
                    android:textColor="@color/color_white"
                    android:text="@string/community_off_chain_msg"
                    android:tag="1"
                    android:includeFontPadding="false"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMaxTextSize="@dimen/font_size_12"
                    app:autoSizeMinTextSize="@dimen/font_size_2"
                    app:autoSizeStepGranularity="@dimen/font_size_0_5"
                    android:background="@drawable/community_tab_background_default"
                    android:gravity="center|center_vertical"
                    android:onClick="@{listener::onClick}"
                    android:textAppearance="@style/TextAppearanceBody3"/>

                <TextView
                    android:id="@+id/tv_wring"
                    android:layout_width="0dp"
                    android:layout_weight="1.1"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/widget_size_1"
                    android:layout_marginEnd="@dimen/widget_size_1"
                    android:paddingTop="@dimen/widget_size_5"
                    android:paddingBottom="@dimen/widget_size_5"
                    android:paddingStart="@dimen/widget_size_2"
                    android:paddingEnd="@dimen/widget_size_2"
                    android:textColor="@color/color_white"
                    android:text="@string/community_wired"
                    android:tag="2"
                    android:includeFontPadding="false"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMaxTextSize="@dimen/font_size_12"
                    app:autoSizeMinTextSize="@dimen/font_size_2"
                    app:autoSizeStepGranularity="@dimen/font_size_0_5"
                    android:background="@drawable/community_tab_background_default"
                    android:gravity="center|center_vertical"
                    android:onClick="@{listener::onClick}"
                    android:textAppearance="@style/TextAppearanceBody3"/>

                <TextView
                    android:id="@+id/tv_tip_blocks"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/widget_size_1"
                    android:layout_marginEnd="@dimen/widget_size_1"
                    android:paddingTop="@dimen/widget_size_5"
                    android:paddingBottom="@dimen/widget_size_5"
                    android:paddingStart="@dimen/widget_size_2"
                    android:paddingEnd="@dimen/widget_size_2"
                    android:textColor="@color/color_white"
                    android:text="@string/community_head_blocks"
                    android:tag="3"
                    android:includeFontPadding="false"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMaxTextSize="@dimen/font_size_12"
                    app:autoSizeMinTextSize="@dimen/font_size_2"
                    app:autoSizeStepGranularity="@dimen/font_size_0_5"
                    android:background="@drawable/community_tab_background_default"
                    android:gravity="center|center_vertical"
                    android:onClick="@{listener::onClick}"
                    android:textAppearance="@style/TextAppearanceBody3"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_filter"
                android:layout_width="@dimen/widget_size_40"
                android:layout_height="@dimen/widget_size_40"
                android:padding="@dimen/widget_size_10"
                android:layout_alignParentEnd="true"
                android:contentDescription="@null"
                android:onClick="@{listener::onClick}"
                android:src="@mipmap/icon_filter"/>

        </RelativeLayout>

        <View
            android:id="@+id/tab_layout_line"
            android:layout_below="@+id/rl_filter"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_1"
            android:background="@color/divider"/>

        <androidx.fragment.app.FragmentContainerView
            android:layout_above="@+id/fl_join"
            android:id="@+id/tab_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tab_layout_line"
            android:background="@color/color_chat_bg"/>

        <FrameLayout
            android:visibility="gone"
            android:id="@+id/fl_join"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_chat_bg"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/tv_join"
                android:layout_width="match_parent"
                android:layout_height="@dimen/widget_size_44"
                android:background="@drawable/blue_dark_rect_round_bg"
                android:layout_marginTop="@dimen/widget_size_10"
                android:layout_marginBottom="@dimen/widget_size_10"
                android:layout_marginStart="@dimen/widget_size_20"
                android:layout_marginEnd="@dimen/widget_size_20"
                android:gravity="center_horizontal|center"
                android:onClick="@{listener::onClick}"
                android:textColor="@color/color_white"
                android:text="@string/community_join"/>

        </FrameLayout>
    </RelativeLayout>
</layout>