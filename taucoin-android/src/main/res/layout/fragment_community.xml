<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="listener"
            type="android.view.View.OnClickListener" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <include
            android:id="@+id/toolbar_include"
            layout="@layout/toolbar_main_right" />

        <LinearLayout
            android:id="@+id/ll_filter"
            android:layout_below="@+id/toolbar_include"
            android:orientation="horizontal"
            android:minHeight="@dimen/widget_size_40"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/widget_size_1"
            android:paddingEnd="@dimen/widget_size_1"
            android:paddingTop="@dimen/widget_size_1"
            android:paddingBottom="@dimen/widget_size_1">

            <TextView
                android:id="@+id/tv_chain_note"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/widget_size_5"
                android:paddingBottom="@dimen/widget_size_5"
                android:paddingStart="@dimen/widget_size_2"
                android:paddingEnd="@dimen/widget_size_2"
                android:textColor="@color/color_white"
                android:text="@string/community_chain_note"
                android:tag="0"
                android:includeFontPadding="false"
                android:background="@drawable/grey_dark_rect_round_bg"
                android:gravity="center|center_vertical"
                android:onClick="@{listener::onClick}"
                android:textAppearance="@style/TextAppearanceBody2"/>

            <TextView
                android:id="@+id/tv_chain_market"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/widget_size_1"
                android:layout_marginEnd="@dimen/widget_size_1"
                android:paddingTop="@dimen/widget_size_5"
                android:paddingBottom="@dimen/widget_size_5"
                android:paddingStart="@dimen/widget_size_2"
                android:paddingEnd="@dimen/widget_size_2"
                android:textColor="@color/color_white"
                android:text="@string/community_chain_market"
                android:tag="1"
                android:includeFontPadding="false"
                android:background="@drawable/grey_dark_rect_round_bg"
                android:gravity="center|center_vertical"
                android:onClick="@{listener::onClick}"
                android:textAppearance="@style/TextAppearanceBody2"/>

            <TextView
                android:id="@+id/tv_chain_tx"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/widget_size_5"
                android:paddingBottom="@dimen/widget_size_5"
                android:paddingStart="@dimen/widget_size_2"
                android:paddingEnd="@dimen/widget_size_2"
                android:textColor="@color/color_white"
                android:text="@string/community_on_chain"
                android:tag="2"
                android:includeFontPadding="false"
                android:background="@drawable/grey_dark_rect_round_bg"
                android:gravity="center|center_vertical"
                android:onClick="@{listener::onClick}"
                android:textAppearance="@style/TextAppearanceBody2"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_escrow_service"
            android:layout_below="@+id/ll_filter"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/widget_size_10"
            android:paddingEnd="@dimen/widget_size_10"
            android:background="@color/color_gray_light">

            <TextView
                android:id="@+id/tv_escrow_service"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/community_escrow_service_enter"
                android:paddingTop="@dimen/widget_size_7"
                android:paddingBottom="@dimen/widget_size_7"
                android:textColor="@color/color_white"
                android:onClick="@{listener::onClick}"
                android:textAppearance="@style/TextAppearanceBody3"/>

            <ImageView
                android:id="@+id/iv_close_escrow_service"
                android:layout_width="@dimen/widget_size_14"
                android:layout_height="@dimen/widget_size_14"
                android:layout_marginStart="@dimen/widget_size_10"
                android:contentDescription="@null"
                android:onClick="@{listener::onClick}"
                android:src="@mipmap/icon_close_drawer"/>

        </LinearLayout>

        <androidx.fragment.app.FragmentContainerView
            android:layout_above="@+id/fl_join"
            android:id="@+id/tab_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ll_escrow_service"
            android:background="@color/color_chat_bg"/>

        <FrameLayout
            android:visibility="gone"
            android:id="@+id/fl_join"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_chat_bg"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/tv_join"
                android:layout_width="match_parent"
                android:layout_height="@dimen/widget_size_44"
                android:background="@drawable/blue_dark_rect_round_bg"
                android:layout_marginTop="@dimen/widget_size_10"
                android:layout_marginBottom="@dimen/widget_size_10"
                android:layout_marginStart="@dimen/widget_size_20"
                android:layout_marginEnd="@dimen/widget_size_20"
                android:gravity="center_horizontal|center"
                android:onClick="@{listener::onClick}"
                android:textColor="@color/color_white"
                android:text="@string/community_join"/>

        </FrameLayout>
    </RelativeLayout>
</layout>