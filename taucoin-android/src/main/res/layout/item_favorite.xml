<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:layout_marginBottom="@dimen/widget_size_5"
        android:paddingStart="@dimen/widget_size_10"
        android:paddingEnd="@dimen/widget_size_10"
        android:paddingTop="@dimen/widget_size_10"
        android:paddingBottom="@dimen/widget_size_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="@dimen/widget_size_55"
                android:layout_gravity="bottom"
                android:layout_height="wrap_content">

                <io.taucoin.torrent.publishing.ui.customviews.RoundButton
                    android:id="@+id/round_button"
                    android:layout_width="@dimen/widget_size_40"
                    android:layout_height="@dimen/widget_size_40"
                    android:gravity="center_horizontal|center"
                    android:textColor="@color/color_white"
                    android:layout_centerHorizontal="true"
                    android:textAppearance="@style/TextAppearanceBody1"
                    app:btnStrokeColor="@color/primary_light"
                    app:btnStrokeWidth="0dp"
                    app:btnCornerRadius="@dimen/widget_size_10"
                    app:btnSolidColor="@color/primary_light"
                    app:btnPressedRatio="1.5" />

            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/ll_reply"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/widget_size_5"
                    android:layout_marginTop="@dimen/widget_size_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_width="@dimen/widget_size_2"
                        android:layout_height="match_parent"
                        android:background="@color/primary"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/widget_size_10">

                        <TextView
                            android:id="@+id/tv_reply_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:ellipsize="middle"
                            android:includeFontPadding="false"
                            android:textColor="@color/primary"
                            android:textAppearance="@style/TextAppearanceBody2" />

                        <TextView
                            android:id="@+id/tv_reply_msg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/widget_size_2"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:includeFontPadding="false"
                            android:textAppearance="@style/TextAppearanceBody2" />

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearanceBody2" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:paddingTop="@dimen/widget_size_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="@dimen/widget_size_55"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/gray_dark"
                android:paddingStart="@dimen/widget_size_3"
                android:paddingEnd="@dimen/widget_size_3"
                android:paddingTop="@dimen/widget_size_5"
                android:includeFontPadding="false"
                android:textAppearance="@style/TextAppearanceBody4" />

            <TextView
                android:id="@+id/tv_community_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:textColor="@color/gray_dark"
                android:textAppearance="@style/TextAppearanceBody4" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:layout_marginStart="@dimen/widget_size_15"
                android:textColor="@color/gray_dark"
                android:textAppearance="@style/TextAppearanceBody4" />

        </LinearLayout>
    </LinearLayout>
</layout>