<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="listener"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/color_bg"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar_include"
            layout="@layout/toolbar" />

        <ScrollView
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_root"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_white"
                    android:layout_marginTop="@dimen/widget_size_10">

                    <io.taucoin.torrent.publishing.ui.customviews.LeftRightLineView
                        android:id="@+id/tv_working_frequency"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:lineLeftText="@string/setting_work_frequency"/>

                    <io.taucoin.torrent.publishing.ui.customviews.LeftRightLineView
                        android:id="@+id/tv_reset_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:lineLeftText="@string/setting_data_reset_time"/>

                    <io.taucoin.torrent.publishing.ui.customviews.LeftRightLineView
                        android:id="@+id/tv_fore_running_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:lineLeftText="@string/setting_fore_running_time"/>

                    <io.taucoin.torrent.publishing.ui.customviews.LeftRightLineView
                        android:id="@+id/tv_bg_running_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:lineLeftText="@string/setting_bg_running_time"/>

                    <io.taucoin.torrent.publishing.ui.customviews.LeftRightLineView
                        android:id="@+id/tv_doze_running_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:lineVisibility="false"
                        app:lineLeftText="@string/setting_doze_running_time"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:minHeight="@dimen/widget_size_44"
                    android:layout_marginTop="@dimen/widget_size_10"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tab_foreground"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical|center"
                        android:text="@string/setting_foreground"
                        android:background="@color/color_white"
                        android:textColor="@color/colorPrimary"
                        android:onClick="@{listener::onClick}"
                        android:includeFontPadding="false"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearanceBody1"/>

                    <TextView
                        android:id="@+id/tab_background"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/setting_background"
                        android:background="@color/colorPrimary"
                        android:textColor="@color/color_white"
                        android:gravity="center_vertical|center"
                        android:onClick="@{listener::onClick}"
                        android:includeFontPadding="false"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearanceBody1"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_metered"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_white"
                    android:layout_marginTop="@dimen/widget_size_1"
                    android:paddingTop="@dimen/widget_size_15"
                    android:paddingStart="@dimen/widget_size_20"
                    android:paddingEnd="@dimen/widget_size_0">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="@color/primary_light"
                            android:text="@string/setting_metered_network_title"
                            android:includeFontPadding="false"
                            android:textStyle="bold"
                            android:textAppearance="@style/TextAppearanceBody1"/>

                        <ImageView
                            android:visibility="invisible"
                            android:id="@+id/iv_metered_state"
                            android:layout_width="@dimen/widget_size_18"
                            android:layout_height="@dimen/widget_size_18"
                            android:layout_marginEnd="@dimen/widget_size_20"
                            android:contentDescription="@null"
                            android:src="@mipmap/icon_star_yellow"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/widget_size_20"
                        android:layout_marginTop="@dimen/widget_size_10"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="@string/setting_daily_quota"
                            android:textAppearance="@style/TextAppearanceBody1"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_metered_daily_quota"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <include layout="@layout/view_line"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/widget_size_7"
                        android:paddingBottom="@dimen/widget_size_7"
                        android:minHeight="@dimen/widget_size_44"
                        android:layout_marginEnd="@dimen/widget_size_20"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:includeFontPadding="false"
                            android:text="@string/setting_network_available_data"
                            android:textAppearance="@style/TextAppearanceBody1"/>

                        <TextView
                            android:id="@+id/tv_metered_available_data"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray_dark"
                            android:layout_marginEnd="@dimen/widget_size_5"
                            android:textAppearance="@style/TextAppearanceBody1"/>

                    </LinearLayout>

                    <include layout="@layout/view_line"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/widget_size_7"
                        android:paddingBottom="@dimen/widget_size_7"
                        android:minHeight="@dimen/widget_size_44"
                        android:layout_marginEnd="@dimen/widget_size_20"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:includeFontPadding="false"
                            android:layout_marginEnd="@dimen/widget_size_10"
                            android:text="@string/setting_average_speed"
                            android:textAppearance="@style/TextAppearanceBody1"/>

                        <TextView
                            android:id="@+id/tv_metered_average_speed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray_dark"
                            android:layout_marginEnd="@dimen/widget_size_5"
                            android:textAppearance="@style/TextAppearanceBody1"/>

                    </LinearLayout>

                    <include layout="@layout/view_line"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/widget_size_7"
                        android:paddingBottom="@dimen/widget_size_7"
                        android:minHeight="@dimen/widget_size_44"
                        android:layout_marginEnd="@dimen/widget_size_20"
                        android:layout_marginTop="0dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:includeFontPadding="false"
                            android:text="@string/setting_fixed_frequency"
                            android:textAppearance="@style/TextAppearanceBody1"/>

                        <Spinner
                            android:id="@+id/metered_fixed_frequency"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:paddingStart="@dimen/widget_size_5"
                            android:paddingEnd="@dimen/widget_size_35"
                            android:spinnerMode="dialog"
                            android:entries="@array/fixed_frequency"/>

                    </LinearLayout>

                    <include layout="@layout/view_line"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/widget_size_7"
                        android:paddingBottom="@dimen/widget_size_7"
                        android:minHeight="@dimen/widget_size_44"
                        android:layout_marginEnd="@dimen/widget_size_20"
                        android:layout_marginTop="0dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:includeFontPadding="false"
                            android:text="@string/setting_network_current_speed"
                            android:textAppearance="@style/TextAppearanceBody1"/>

                        <TextView
                            android:id="@+id/tv_metered_current_speed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray_dark"
                            android:layout_marginEnd="@dimen/widget_size_5"
                            android:textAppearance="@style/TextAppearanceBody1"/>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_wifi"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_white"
                    android:layout_marginTop="@dimen/widget_size_1"
                    android:paddingTop="@dimen/widget_size_15"
                    android:paddingStart="@dimen/widget_size_20"
                    android:paddingEnd="0dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="@color/primary_light"
                            android:text="@string/setting_wifi_network_title"
                            android:includeFontPadding="false"
                            android:textStyle="bold"
                            android:textAppearance="@style/TextAppearanceBody1"/>

                        <ImageView
                            android:visibility="invisible"
                            android:id="@+id/iv_wifi_state"
                            android:layout_width="@dimen/widget_size_18"
                            android:layout_height="@dimen/widget_size_18"
                            android:layout_marginEnd="@dimen/widget_size_20"
                            android:contentDescription="@null"
                            android:src="@mipmap/icon_star_yellow"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/widget_size_20"
                        android:layout_marginTop="@dimen/widget_size_10"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="@string/setting_daily_quota"
                            android:textAppearance="@style/TextAppearanceBody1"/>

                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_wifi_daily_quota"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        </RadioGroup>
                    </LinearLayout>

                    <include layout="@layout/view_line"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/widget_size_7"
                        android:paddingBottom="@dimen/widget_size_7"
                        android:minHeight="@dimen/widget_size_44"
                        android:layout_marginEnd="@dimen/widget_size_20"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:includeFontPadding="false"
                            android:text="@string/setting_network_available_data"
                            android:textAppearance="@style/TextAppearanceBody1"/>

                        <TextView
                            android:id="@+id/tv_wifi_available_data"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray_dark"
                            android:layout_marginEnd="@dimen/widget_size_5"
                            android:textAppearance="@style/TextAppearanceBody1"/>

                    </LinearLayout>

                    <include layout="@layout/view_line"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/widget_size_7"
                        android:paddingBottom="@dimen/widget_size_7"
                        android:minHeight="@dimen/widget_size_44"
                        android:layout_marginEnd="@dimen/widget_size_20"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:includeFontPadding="false"
                            android:text="@string/setting_average_speed"
                            android:layout_marginEnd="@dimen/widget_size_10"
                            android:textAppearance="@style/TextAppearanceBody1"/>

                        <TextView
                            android:id="@+id/tv_wifi_average_speed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray_dark"
                            android:layout_marginEnd="@dimen/widget_size_5"
                            android:textAppearance="@style/TextAppearanceBody1"/>

                    </LinearLayout>

                    <include layout="@layout/view_line"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/widget_size_7"
                        android:paddingBottom="@dimen/widget_size_7"
                        android:minHeight="@dimen/widget_size_44"
                        android:layout_marginEnd="@dimen/widget_size_20"
                        android:layout_marginTop="0dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:includeFontPadding="false"
                            android:text="@string/setting_fixed_frequency"
                            android:textAppearance="@style/TextAppearanceBody1"/>

                        <Spinner
                            style="@style/Widget.AppCompat.TextView.SpinnerItem"
                            android:id="@+id/wifi_fixed_frequency"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:spinnerMode="dialog"
                            android:gravity="end"
                            android:paddingStart="@dimen/widget_size_5"
                            android:paddingEnd="@dimen/widget_size_35"
                            android:entries="@array/fixed_frequency"/>

                    </LinearLayout>

                    <include layout="@layout/view_line"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/widget_size_7"
                        android:paddingBottom="@dimen/widget_size_7"
                        android:minHeight="@dimen/widget_size_44"
                        android:layout_marginEnd="@dimen/widget_size_20"
                        android:layout_marginTop="0dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:includeFontPadding="false"
                            android:text="@string/setting_network_current_speed"
                            android:textAppearance="@style/TextAppearanceBody1"/>

                        <TextView
                            android:id="@+id/tv_wifi_current_speed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray_dark"
                            android:layout_marginEnd="@dimen/widget_size_5"
                            android:textAppearance="@style/TextAppearanceBody1"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>