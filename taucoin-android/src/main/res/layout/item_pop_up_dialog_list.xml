<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/widget_size_30"
        android:paddingEnd="@dimen/widget_size_30"
        android:paddingTop="@dimen/widget_size_15"
        android:paddingBottom="@dimen/widget_size_15"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_item_icon"
            android:layout_width="@dimen/widget_size_24"
            android:layout_height="@dimen/widget_size_24"
            android:layout_marginEnd="@dimen/widget_size_5"
            android:contentDescription="@null"
            android:src="@mipmap/icon_retwitt"/>

        <TextView
            android:id="@+id/tv_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:ellipsize="middle"
            android:textColor="@color/gray_dark"
            android:textAppearance="@style/TextAppearanceBody1" />

    </LinearLayout>
</layout>