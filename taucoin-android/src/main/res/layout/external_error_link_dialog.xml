<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/widget_size_0"
        android:paddingEnd="0dp"
        android:paddingBottom="0dp"
        android:background="@color/color_white">

        <ImageView
            android:id="@+id/iv_invalid_link"
            android:layout_width="@dimen/widget_size_80"
            android:layout_height="@dimen/widget_size_80"
            android:layout_marginTop="@dimen/widget_size_20"
            android:layout_centerHorizontal="true"
            android:contentDescription="@null"
            android:src="@mipmap/icon_invalid_link"/>

        <TextView
            android:layout_below="@+id/iv_invalid_link"
            android:id="@+id/tv_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:includeFontPadding="false"
            android:layout_marginTop="@dimen/widget_size_0"
            android:textColor="@color/gray_dark"
            android:text="@string/main_error_link"
            android:textAppearance="@style/TextAppearanceBody1"/>

        <TextView
            android:layout_below="@+id/tv_tips"
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/widget_size_15"
            android:textAppearance="@style/TextAppearanceHeadline5"/>

        <TextView
            android:layout_below="@+id/tv_name"
            android:id="@+id/tv_close"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_40"
            android:layout_marginTop="@dimen/widget_size_0"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/widget_size_50"
            android:layout_marginEnd="@dimen/widget_size_50"
            android:textAllCaps="true"
            android:gravity="center_horizontal|center"
            android:background="@drawable/grey_dark_rect_round_bg"
            android:text="@string/common_close"
            android:textColor="@color/color_white"
            android:textAppearance="@style/TextAppearanceBody1"/>

    </RelativeLayout>
</layout>