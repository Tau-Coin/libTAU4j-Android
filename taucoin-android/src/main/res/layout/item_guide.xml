<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/iv_guide"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/widget_size_120"
            android:contentDescription="@null"
            android:src="@mipmap/icon_guide2"/>

        <TextView
            android:id="@+id/tv_guide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:lineSpacingExtra="@dimen/widget_size_2"
            android:layout_marginTop="@dimen/widget_size_20"
            android:layout_marginBottom="@dimen/widget_size_30"
            android:layout_marginStart="@dimen/widget_size_20"
            android:layout_marginEnd="@dimen/widget_size_20"
            android:textColor="@color/gray_dark"
            android:textAppearance="@style/TextAppearanceHeadline6"/>
    </LinearLayout>
</layout>