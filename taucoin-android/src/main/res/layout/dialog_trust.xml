<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="@dimen/widget_size_18"
            android:layout_height="@dimen/widget_size_18"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/widget_size_10"
            android:contentDescription="@null"
            android:src="@mipmap/icon_close" />

        <LinearLayout
            android:layout_below="@+id/iv_close"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/widget_size_20"
            android:layout_marginEnd="@dimen/widget_size_20"
            android:layout_marginBottom="@dimen/widget_size_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:visibility="gone"
                android:layout_width="@dimen/widget_size_80"
                android:layout_height="@dimen/widget_size_80"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@null"
                android:src="@mipmap/icon_give_trust" />

            <TextView
                android:id="@+id/tv_trust_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/widget_size_20"
                android:textColor="@color/gray_dark"
                android:text="@string/tx_give_trust_tip"
                android:textAppearance="@style/TextAppearanceBody1"/>

            <TextView
                android:id="@+id/tv_trust_fee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/widget_size_5"
                android:textColor="@color/gray_dark"
                android:text="@string/tx_median_fee"
                android:textAppearance="@style/TextAppearanceBody2"/>

            <TextView
                android:id="@+id/tv_submit"
                android:minWidth="@dimen/widget_size_240"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/widget_size_40"
                android:text="@string/tx_give_trust"
                android:layout_marginTop="@dimen/widget_size_35"
                android:layout_gravity="center_horizontal"
                android:textAllCaps="false"
                android:gravity="center_horizontal|center"
                android:textColor="@color/color_white"
                android:textAppearance="@style/TextAppearanceBody1"
                android:background="@drawable/primary_rect_round_bg" />

        </LinearLayout>
    </RelativeLayout>
</layout>