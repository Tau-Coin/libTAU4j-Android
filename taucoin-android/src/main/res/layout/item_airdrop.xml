<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="@dimen/widget_size_50">

            <TextView
                android:id="@+id/tv_left"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:layout_marginStart="@dimen/widget_size_15"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:ellipsize="end"
                android:textAppearance="@style/TextAppearanceBody1" />

            <TextView
                android:id="@+id/tv_share"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:includeFontPadding="false"
                android:paddingStart="@dimen/widget_size_10"
                android:paddingEnd="@dimen/widget_size_10"
                android:gravity="center_vertical"
                android:text="@string/common_share"
                android:textColor="@color/color_blue_link"
                android:textAppearance="@style/TextAppearanceBody2" />

            <TextView
                android:id="@+id/tv_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="@dimen/widget_size_60"
                android:includeFontPadding="false"
                android:layout_marginEnd="@dimen/widget_size_5"
                android:gravity="end"
                android:textColor="@color/gray_dark"
                android:textAppearance="@style/TextAppearanceBody2" />

            <ImageView
                android:id="@+id/iv_arrow"
                android:layout_width="@dimen/widget_size_14"
                android:layout_height="@dimen/widget_size_14"
                android:layout_marginEnd="@dimen/widget_size_15"
                android:contentDescription="@null"
                android:src="@mipmap/icon_arrow"/>

        </LinearLayout>

        <View
            android:background="@color/color_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_1" />

    </LinearLayout>
</layout>