<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/widget_size_5"
            android:paddingEnd="@dimen/widget_size_0"
            android:gravity="center_vertical"
            android:minHeight="@dimen/widget_size_50">

            <CheckBox
                android:id="@+id/cb_select"
                android:layout_width="@dimen/widget_size_32"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_left"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:layout_marginStart="@dimen/widget_size_5"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:ellipsize="end"
                android:textAppearance="@style/TextAppearanceBody1" />

        </LinearLayout>

        <View
            android:background="@color/color_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_size_1" />

    </LinearLayout>
</layout>