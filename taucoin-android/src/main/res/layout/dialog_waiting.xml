<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/widget_size_120"
    android:layout_height="@dimen/widget_size_120"
    android:gravity="center"
    android:layout_gravity="center"
    android:background="@drawable/black_rect_round_bg"
    android:orientation="vertical">

    <ProgressBar
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="@dimen/widget_size_30"
        android:layout_height="@dimen/widget_size_30" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/widget_size_10"
        android:textColor="@color/color_white"
        android:textAppearance="@style/TextAppearanceBody1"
        android:text="@string/common_loading" />

</LinearLayout>